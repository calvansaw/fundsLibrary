<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') -%>
	</head>
	<body>
	
		<div class="head">

			<h1>Welcome to Fund Library</h1>

			<div class="head-button">	

				<%if(currentUser) {%>
					<div>
						<a class="btn btn-primary btn-sm" href="/library/new">Create New Fund</a>
					</div>
				<%};%>
					
				<div>
					<a class="btn btn-primary btn-sm" href="/library/portfolio">Portfolio Simulator</a>
				</div>
					
			</div>

		</div>

		<div class="main">   
			<ul>
                <%allFunds.forEach(fund => {%>
                    <li class="card" style="max-width: 80rem;"><a class="btn btn-outline-success btn-sm" href="/library/<%=fund._id%>"><%=fund.name%></a></li>
                <%});%>
            </ul>
		</div>
	</body>
</html>
